<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>


<%= form_for(@message) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


<form class="form-inline">
